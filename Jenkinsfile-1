pipeline {
    agent any

    tools {
        git 'git'
    }

    stages {
        stage('Manual Clone') {
            steps {
                sh 'rm -rf repo && git clone https://github.com/tamanna4373/jenkins-example-docker.git repo'
            }
        }

        stage('Confirm Files') {
            steps {
                sh 'ls -la repo'
            }
        }

        stage('Done') {
            steps {
                echo 'âœ… Jenkins successfully cloned the repo manually!'
            }
        }
    }
}
